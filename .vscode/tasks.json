{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-Wall",
                "-ljpeg",
                "-lcryptopp",
                "-I/usr/include/freetype2",
                "-I/usr/include/libpng16",
                "-lfreetype",
                "-std=c++14"
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-D__LOCAL__"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "command": "${workspaceFolder}/Projects/OJTool/build/main",
            "type": "shell",
            "label": "OJ Tool",
            "args": [
                "${file}",
                "${input:CommandToRun}"
            ],
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "CommandToRun",
            "type": "pickString",
            "description": "Command to run",
            "options": [
                "GetQuestionDetail",
                "SubmitCode",
                "GetAnswerOrTips"
            ],
            "default": "GetQuestionDetail"
        }
    ],
    "version": "2.0.0"
}
